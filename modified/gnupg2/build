#!/bin/sh -e

out=$PWD/out
mkdir -p out

(
    cd ntbtls

    ./configure \
        --prefix=/usr \
        --enable-static \
        --disable-shared

    make
    make DESTDIR="$out" install
)

export CPPFLAGS="$CPPFLAGS -I$out/usr/include"
export LDFLAGS="$CPPFLAGS -L$out/usr/lib"
export PATH=$PATH:$out/usr/bin

./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/gnupg \
    --disable-gpgsm \
    --disable-scdaemon \
    --disable-keyboxd \
    --disable-doc \
    --disable-gpgtar \
    --disable-wks-tools \
    --disable-photo-viewers \
    --disable-card-support \
    --disable-ccid-driver \
    --disable-sqlite \
    --disable-gnutls \
    --disable-ldap \
    --disable-nls

make
make install
