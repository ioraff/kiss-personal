#!/bin/sh -e

./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib/gnupg \
    --disable-gpgsm \
    --disable-scdaemon \
    --disable-keyboxd \
    --disable-doc \
    --disable-gpgtar \
    --disable-wks-tools \
    --disable-photo-viewers \
    --disable-card-support \
    --disable-ccid-driver \
    --disable-sqlite \
    --disable-gnutls \
    --disable-ldap \
    --disable-nls

make
make install
