#!/bin/sh -e

export CFLAGS="$CFLAGS -fplt"
export LDFLAGS="$LDFLAGS -Wl,-z,lazy"

patch -Rp1 < revert_dpi_calculation.patch
patch -p1 < rootless_modesetting.patch

./configure \
    --prefix=/usr \
    --localstatedir=/var \
    --disable-systemd-logind \
    --disable-xwayland \
    --disable-unit-tests \
    --enable-glx \
    --enable-dri \
    --enable-dri2 \
    --enable-dri3 \
    --enable-glamor \
    --enable-xorg \
    --with-sha1=libcrypto \
    --with-systemd-daemon=off

make
make DESTDIR="$1" install
